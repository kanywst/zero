{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zero",
  "version": "0.1.0",
  "identifier": "com.kanywst.zero",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zero",
        "width": 1000,
        "height": 800,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "Zero CLI",
      "args": [
        {
          "name": "file",
          "description": "The file to open",
          "index": 1,
          "takesValue": true
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
